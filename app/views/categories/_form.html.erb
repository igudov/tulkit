<%= form_for(@category) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% @category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :parent_id %><br>
    <%= f.select :parent_id, nested_set_options(Category, @category) {|i| "#{'-' * i.level} #{i.title}" }, prompt: 'Select a category parent' %>
  </div>
  <div class="field">
    <%= f.label :font %><br>
    <%= f.text_field :font, :placeholder =>"Enter Fontawesome class" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
