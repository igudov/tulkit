<!-- Modal -->

<div class="modal fade" id="AnswerModal<%=if not answer.nil? then answer.id end%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for(answer) do |f| %>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Answer The Question</h4>
      </div>
       <!--<fieldset>  -->
      <div class="modal-body">
        
        

          
            <% if answer.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(answer.errors.count, "error") %> prohibited this answer from being saved:</h2>
                <ul>
                <% answer.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
              <div><b>Question: </b><%= answer.inquiry %></div>
              <br/>
              <div class="field">            
                <%= f.text_area :answer, rows: 6, style: "width: 100%" %>
              </div>          
              <div class="field">
                <%= f.hidden_field :user_id %>
              </div>
              <div class="field">
                <%= f.hidden_field :job_id %>
              </div>
              
            
         

        
      </div> 
      <div class="modal-footer">            
                  <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                  <!--<button type="button" class="btn btn-primary">Save changes</button>-->
                  <%= f.submit "Answer", class: "btn btn-primary" %>                       
              </div>
      <!--</fieldset>  -->
       <% end %>   
    </div>
  </div>
</div>

