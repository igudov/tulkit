














<!-- Topic Header -->
<div class="topic">
  <div class="container">
    <div class="row">
      <div class="col-sm-4">
        <h3>Job Listings</h3>
      </div>
      <div class="col-sm-8">
        <ol class="breadcrumb pull-right hidden-xs">
          <li><a href="/">Home</a></li>
          <li class="active">Jobs</li>
        </ol>
      </div>
    </div>
  </div>
</div>

<div class="container">
  
  <% if session[:user_id] %>
  <% user_access = User.find_by(id: session[:user_id]).access %>
  <% end %>

  <div class="row">
    <div class="col-sm-8">
      <% if notice %>      
      <div class="alert alert-dismissable alert-success">
        <button type="button" class="close" data-dismiss="alert">Ã—</button>
        <%= notice %>
      </div>
      <% end %>
      <!-- Filters -->
      <!--<ul class="nav nav-tabs nav-justified">
        <li class="active"><a href="#popular" data-toggle="tab">Dashboard</a></li>
        <li><a href="#recommended" data-toggle="tab">All Active</a></li>
        <li><a href="#recent" data-toggle="tab">Recently Added</a></li>
        <li><a href="#last" data-toggle="tab">Last Chance</a></li>
      </ul>-->

      <div class="row">
        <!--<div class="tab-content">-->
        <% cache ['jobs', Job.latest] do %>
          <table class="table table-striped table-hover ">
            <thead>
              <!--<tr>
                <th>Title</th>
                <th>Description</th>
                <th>Image url</th>
                <th>Category</th>
                <th>Status</th>
                <th>From</th>
                <th>To</th>
                <th></th>
                <th></th>
                <th></th>
              </tr>-->
            </thead>
            <tbody>      
              <% @jobs.each do |job| %>
                <% cache ['entry', job] do %>
                  <div class="entry">
                    <tr>
                      <td>
                        <%= image_tag(job.image_url, class: 'list_image img-rounded') %>
                      </td>

                      <td class="list_description">
                        <dl>
                          <dt><%= link_to job.title, job, :class => "link-primary" %></dt>
                          <dd>
                            <%= truncate(strip_tags(job.description), length: 80) %>
                          </dd>
                          <dd class="date">
                            <i>Start date in <b><%= distance_of_time_in_words(Time.now, job.from) %></b></i> 
                          </dd>
                          <dd class="date">
                            <i>End date in <b><%= distance_of_time_in_words(Time.now, job.to) %></b></i> 
                          </dd>
                        </dl>
                      </td>     
                      <td class="list_actions">                        
                        <a href="/jobs/<%= job.id %>" class="btn btn-sm btn-blue"><i class="fa fa-info-circle"></i> Show</a>
                        <% if session[:user_id] %>
                          <% if user_access == 'administrator' || job.user_id == session[:user_id] %>
                            <%= link_to "Destroy", job, method: :delete, data: { confirm: 'Are you sure?'}, :class => "btn btn-sm btn-red" %>
                          <% end %>
                        <% end %>
                      </td>
                    </tr>
                  </div>
                <% end %>
              <% end %>       
            </tbody>
          </table>
        <% end %> 
          
        <!--</div> --><!-- /.tab-content -->         
      </div> <!-- / .row -->

      <!-- Pagination -->
      <div class="row">
        <div class="col-sm-12">
          <ul class="pagination pull-right">
            <li class="disabled"><a href="#">&laquo;</a></li>
            <li class="active"><a href="#">1 <span class="sr-only">(current)</span></a></li>
            <li><a href="#">2</a></li>
            <li><a href="#">3</a></li>
            <li><a href="#">4</a></li>
            <li><a href="#">5</a></li>
            <li><a href="#">&raquo;</a></li>
          </ul>
        </div>
      </div> <!-- / .row -->
      
    </div> <!-- / .col-sm-8 -->

    <div class="col-sm-4">
      <!-- Search -->
      <form role="form">
        <div class="well">
          <div class="row">
            <div class="col-sm-12">
              <div class="input-group">
                <input type="text" class="form-control" placeholder="Search products...">
                <span class="input-group-btn">
                  <button class="btn btn-red" type="button"><i class="fa fa-search"></i></button>
                </span>
              </div><!-- /input-group -->
            </div><!-- /.col-lg-6 -->
          </div><!-- /.row -->
        </div>
      </form>
      <!-- Categories -->
      <div class="panel-group" id="help-nav">
        <% @categories = Category.order(:lft) %>
        
        <% @sub_categories = Category.new %>
        
        <% @categories.each do |category| %>
          <% if category.parent == nil then %>
            <!--category-->          
            <% @count = 0 %>
            <% @count = @count + @jobs.where(category_id: category.id).count %>
            <% @sub_cats_to_count = @categories.where(parent_id: category.id) %>
            <% @sub_cats_to_count.each do |sctc| %>
              <% @count = @count + @jobs.where(category_id: sctc.id).count %>
            <% end %>

            <div class="panel panel-default">
              <div class="panel-heading">
                <% if @category != nil then %>              
                  <% if @category == category || @category == category.parent then %>
                      <a data-toggle="collapse" data-parent="#help-nav" href="#help-nav-<%= category.id %>">
                        <%= category.title %> (<%= @count %>)
                      </a>
                    </div>                              
                    <div id="help-nav-<%= category.id %>" class="panel-collapse collapse in">                  
                  <% else %>
                      <a data-toggle="collapse" data-parent="#help-nav" href="#help-nav-<%= category.id %>" class="collapsed">
                        <%= category.title %> (<%= @count %>)
                      </a>
                    </div>                              
                    <div id="help-nav-<%= category.id %>" class="panel-collapse collapse"> 
                  <% end %>
                <% else %>
                  <a data-toggle="collapse" data-parent="#help-nav" href="#help-nav-<%= category.id %>" class="collapsed">
                        <%= category.title %> (<%= @count %>)
                      </a>
                    </div>                              
                    <div id="help-nav-<%= category.id %>" class="panel-collapse collapse">
                <% end %>
                <div class="panel-body">
                  <ul>
                    <li><%= link_to "Uncategorized (#{@jobs.where(category_id: category.id).count})", category %> </li>
                    <% @categories.each do |sub_category| %>                    
                      <% if sub_category.parent == category then %>
                        <li><%= link_to "#{sub_category.title} (#{@jobs.where(category_id: sub_category.id).count})", sub_category %>  </li>
                      <% end %>                    
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>        
      </div>
    </div>

  </div> <!-- / .row -->
</div> <!-- / .container -->
